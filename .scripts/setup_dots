git clone --bare https://github.com/brijow/dotfiles.git $HOME/dotfiles

function got {
    /usr/local/bin/git --git-dir=$HOME/dotfiles/ --work-tree=$HOME $@;
}
got checkout
if [ $? = 0 ]; then
  echo "Checked out dotfiles.";
  else
    echo "Backing up pre-existing dot files.";
    got checkout 2>&1 | egrep "\s+\." | awk {'print $1'} | xargs -I{} sh -c 'f="{}"; mkdir -p .dotfiles-bkp/"${f%/*}"; mv "$f" .dotfiles-bkp/"$f";'
fi;
got checkout
got config status.showUntrackedFiles no
