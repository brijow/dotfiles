{
    //
    //
    //////////////////////////////////////////////////////
    // general coc config
    "coc.preferences.formatOnSaveFiletypes": [
        "python",
        "R",
        "html",
        "css",
        "json"
    ],
    "coc.preferences.extensionUpdateCheck": "never",
    //
    //
    //////////////////////////////////////////////////////
    // coc-python config
    //"python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--ignore=E501"
    ],
    // see https: //github.com/PyCQA/pylint/issues/1975
    "python.linting.pylintArgs": [
        "--generate-members"
    ],
    "python.jediEnabled": true,
    "python.pythonPath": "~/miniconda3/bin/python",
    "python.jediPath": "~/miniconda3/lib/python3.7/site-packages",
    "python.formatting.blackPath": "~/miniconda3/lib/python3.7/site-packages",
    //
    //
